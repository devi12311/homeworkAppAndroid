<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/idIVSubjectImage"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/book_icon" />

        <TextView
            android:id="@+id/idTVSubjectName"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/idIVSubjectImage"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTVSubjectDuration"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVSubjectName"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/idIVSubjectImage"
            android:drawablePadding="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/homeworks"
            android:layout_width="112dp"
            android:layout_height="36dp"
            android:layout_below="@+id/idTVSubjectDuration"
            android:layout_marginStart="4dp"
            android:layout_marginTop="3dp"
            app:chipBackgroundColor="#009688"
            android:layout_toEndOf="@id/idIVSubjectImage"
            android:text="tests" />

        <com.google.android.material.chip.Chip
            android:id="@+id/absences"
            android:layout_width="112dp"
            android:layout_height="36dp"
            android:layout_below="@+id/idTVSubjectDuration"
            android:layout_marginStart="4dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            app:chipBackgroundColor="#FF9800"
            android:layout_toEndOf="@id/homeworks"
            android:text="tests" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
